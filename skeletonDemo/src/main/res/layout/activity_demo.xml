<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:background="@drawable/nexus4_background"
              android:orientation="vertical"
              tools:context=".MainActivity">

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <com.csr.view.DataView
        android:id="@+id/distanceData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:valueText="--"
        app:unitText="m"
        app:layout="@layout/data_big_no_title"/>

    <com.csr.view.DataView
        android:id="@+id/speedData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="Speed"
        app:valueText="--"
        app:unitText="m/s"
        app:layout="@layout/data_normal"/>

    <com.csr.view.DataView
        android:id="@+id/cadenceData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:valueText="--"
        app:titleText="Cadence"
        app:unitText="RPM"
        app:layout="@layout/data_normal"/>

    <com.csr.view.DataView
        android:id="@+id/strideData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="Stride length"
        app:unitText="cm"
        app:valueText="--"
        app:layout="@layout/data_normal"/>

    <com.csr.view.DataView
        android:id="@+id/locationData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="Sensor location"
        app:valueText="--"
        app:layout="@layout/data_normal"/>

</LinearLayout>